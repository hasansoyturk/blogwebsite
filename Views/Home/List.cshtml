@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
}
<div class= "container">
    <h2>Blog List</h2>
    <hr />
    <div class="row">
        <div class="col">

            @if (Model.Count() >0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>IsApproved</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.BlogId</td>
                                <td>
                                    <img src="~/images/@item.Image" width="100" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.IsApproved</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                        Details
                                    </a> 
                                    <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">
                                        Delete
                                    </a> 
                                </td> 

                            </tr>

                        }


                    </tbody>


                </table>



            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemiş!!!


                </div>

            }






        </div>
    </div>
</div>
